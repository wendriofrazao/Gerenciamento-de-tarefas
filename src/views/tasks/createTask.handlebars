<div class="conteiner-form">
  <form action="/task/create" method="post">

    <h1>Nova Tarefa</h1>

    <label for="title">Título *</label>
    <input type="text" id="title" name="title" minlength="3" maxlength="25" required />

    <label for="description">Descrição *</label>
    <textarea id="description" name="description" minlength="3" maxlength="40" required></textarea>

    <label for="priority">Prioridade</label>
    <select id="priority" name="priority">
      <option value="baixa">Baixa</option>
      <option value="média" selected>Média</option>
      <option value="alta">Alta</option>
    </select>

    <label for="category">Categoria</label>
    <input type="text" id="category" name="category" placeholder="Ex: estudos, trabalho" />

    <label for="tags">Tags</label>
    <input type="text" id="tags" name="tags" placeholder="Ex: urgente, frontend" />

    <label for="progress">Progresso (0 a 100)</label>
    <input type="number" id="progress" name="progress" min="0" max="100" value="0" />

    <div class="checkbox">
      <input type="checkbox" id="done" name="done" />
      <label for="done">Concluída</label>
    </div>

    <button id="submitTask" type="submit">Salvar Tarefa</button>
  </form>
</div>
