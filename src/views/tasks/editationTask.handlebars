<h2>Editar Tarefa</h2>
<div class="task-form-container">
  <form action="/task/updatedTask" method="POST" class="task-form">
    
    <input type="hidden" name="id" value="{{task.id}}">

    <label for="title">Título</label>
    <input type="text" id="title" name="title" placeholder="Digite o título da tarefa" value="{{task.title}}" required>

    <label for="description">Descrição</label>
    <textarea id="description" name="description" placeholder="Detalhes da tarefa..." required>{{task.description}}</textarea>

    <label for="priority">Prioridade</label>
    <select id="priority" name="priority" required>
       <option value="baixa" {{#if task.priority}}selected{{/if}}>Baixa</option>
       <option value="media" {{#if task.priority}}selected{{/if}}>Média</option>
       <option value="alta" {{#if task.priority}}selected{{/if}}>Alta</option>
    </select>

    <label for="category">Categoria</label>
    <input type="text" id="category" name="category" value="{{task.category}}" placeholder="Ex: Trabalho, Estudos...">

    <label for="tags">Tags</label>
    <input type="text" id="tags" name="tags" value="{{task.tags}}" placeholder="Ex: #backend #api">

    <label for="progress">Progresso (%)</label>
    <input type="number" id="progress" name="progress" min="0" max="100" value="{{task.progress}}">

    <label for="done">Status</label>
    <select id="done" name="done">
      <option value="false" {{#unless task.done}}selected{{/unless}}>Não Concluída</option>
      <option value="true" {{#if task.done}}selected{{/if}}>Concluída</option>
    </select>

    <div class="form-actions">
      <button type="submit" class="save">Salvar</button>
      <a href="/task/showTasks"><button type="button" class="cancel">Cancelar</button></a>
    </div>
  </form>
</div>
